@model WorkUpdateDto
<form asp-action="Update" asp-controller="Home" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="mb-5">
        <label>İş Tanımı : </label>
        <input type="text" asp-for="@Model.Definition" class="form-control" />
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="@Model.IsCompleted">
        <label class="form-check-label" for="IsCompleted">
            Yapılma Durumu
        </label>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-dark">Kaydet</button>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>