@model List<WorkListDto>
<div class="text-right my-2">
    <a asp-action="Create" asp-controller="Home" class="btn btn-success btn-sm">Add</a>
</div>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>İş</th>
            <th>Durum</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Definition</td>
                <td>@(item.IsCompleted?"Tamamlandı":"Tamamlanmadı")</td>
                <td>
                    <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Update</a>
                    <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>